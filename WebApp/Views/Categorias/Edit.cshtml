@model Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="card text-center">
    <div class="card-header">
        Editar de Categoria <strong>@Model.Name</strong>
    </div>
    <div class="card-body">
        <a asp-action="Index"
           class="btn btn-outline-primary"><i class="fa-solid fa-users me-2"></i>Volver a la Administracion</a>
    </div>
</div>
<div class="row m-5">
    <div class="col-md-12">
        <form class="row justify-content-center" asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" value="@Model.Id" />
            <div class="col-md-3">
                <div class="form-group m-2">
                    <input asp-for="Name" class="form-control" placeholder="Nombre" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group m-2">
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripcion" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary col-12" />
                </div>
            </div>

        </form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
