@model Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="card text-center">
    <div class="card-header">
        Creacion de Productos
    </div>
    <div class="card-body">
        <a asp-action="Index"
           class="btn btn-outline-primary"><i class="fa-solid fa-users me-2"></i>Volver a la Administracion</a>
    </div>
</div>
<div class="row m-5">
    <div class="col-md-12">
        <form class="row justify-content-center" asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="col-md-3">
                <div class="form-group m-2">
                    <input asp-for="Name" class="form-control" placeholder="Nombre" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <input asp-for="Precio" class="form-control" placeholder="Precio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input class="form-control" type="file" id="formFile" asp-for="ImagenFile" placeholder="Imagen">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group m-2">
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripcion" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <input asp-for="Stock" class="form-control" placeholder="Stock" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <select asp-for="CategoriaId" class="form-select" asp-items="@ViewBag.Categorias"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="form-group m-2">
                    <input type="submit" value="Crear Producto" class="btn btn-primary col-12" />
                </div>
            </div>

        </form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
